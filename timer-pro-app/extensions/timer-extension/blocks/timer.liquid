<div id="timer-pro-{{ block.id }}" class="timer-pro-wrapper" style="display: none;">
  <div class="timer-pro-content">
    <h3 id="timer-title-{{ block.id }}" class="timer-pro-title"></h3>
    <div class="timer-pro-display">
      <div class="timer-unit">
        <span id="days-{{ block.id }}">00</span>
        <label>Days</label>
      </div>
      <div class="timer-unit">
        <span id="hours-{{ block.id }}">00</span>
        <label>Hrs</label>
      </div>
      <div class="timer-unit">
        <span id="mins-{{ block.id }}">00</span>
        <label>Mins</label>
      </div>
      <div class="timer-unit">
        <span id="secs-{{ block.id }}">00</span>
        <label>Secs</label>
      </div>
    </div>
  </div>
</div>

<style>
  .timer-pro-wrapper {
    background: linear-gradient(90deg, #ff4d4d, #c40000);
    color: white;
    padding: 20px;
    border-radius: 12px;
    margin: 20px 0;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    text-align: center;
  }
  .timer-pro-title {
    margin: 0 0 15px 0;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .timer-pro-display {
    display: flex;
    justify-content: center;
    gap: 15px;
  }
  .timer-unit {
    display: flex;
    flex-direction: column;
    background: rgba(255, 255, 255, 0.2);
    padding: 10px;
    border-radius: 8px;
    min-width: 60px;
  }
  .timer-unit span {
    font-size: 1.5rem;
    font-weight: 800;
  }
  .timer-unit label {
    font-size: 0.7rem;
    text-transform: uppercase;
    opacity: 0.8;
  }
</style>

<script>
  (function() {
    const productId = "{{ product.id }}";
    const proxyUrl = "/apps/timer-pro?product_id=" + productId;

    fetch(proxyUrl)
      .then(res => res.json())
      .then(data => {
        if (data.active) {
          document.getElementById("timer-pro-{{ block.id }}").style.display = "block";
          document.getElementById("timer-title-{{ block.id }}").innerText = data.title;

          const endDate = new Date(data.endDate).getTime();

          const updateTimer = () => {
            const now = new Date().getTime();
            const diff = endDate - now;

            if (diff < 0) return;

            document.getElementById("days-{{ block.id }}").innerText = Math.floor(diff / (1000 * 60 * 60 * 24)).toString().padStart(2, '0');
            document.getElementById("hours-{{ block.id }}").innerText = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString().padStart(2, '0');
            document.getElementById("mins-{{ block.id }}").innerText = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
            document.getElementById("secs-{{ block.id }}").innerText = Math.floor((diff % (1000 * 60)) / 1000).toString().padStart(2, '0');
          };

          setInterval(updateTimer, 1000);
          updateTimer();
        }
      });
  })();
</script>

